<!DOCTYPE html>
<html>
<head>
  <%- include('./partials/header'); %>
</head>
<body>
  <div class="container">
    <div class="py-3 text-center">
      <h1 class="display-5 fw-bold">Thanks for Subscribing</h1>
      <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">Hello <a href="/user">"<%= subscriber.original_app_user_id %>"</a></p>
        <% if (Object.keys(subscriber.entitlements).length > 0) { %>
          <p class="lead mb-4">You have gained "<%= Object.keys(subscriber.entitlements)[0] %>" access</p>
        <% } %>

        <% if (subscription_id){ %>
          <p class="lead mb-4">Subscription ID: <%= subscription_id %></p>
        <% } %>
        <% if (checkout_session_id){ %>
          <p class="lead mb-4">Checkout Session ID: <%= checkout_session_id %></p>
        <% } %>
        <p class="lead mb-4">If you want to go back home <a href="/">click here</a></p>
      </div>
    </div>
  </div>
</body>
<%- include('./partials/scripts'); %>
</html>